datasource db {
  provider = "sqlserver"
  url      = env("DB_FLOWBLADE_SQLSERVER_JDBC")
  schemas  = ["common"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema", "views"]
  output          = "../src/generated/client"
}

model Currency {
  id                Int       @id @default(autoincrement())
  title             String?   @unique() @db.VarChar(80)
  symbol            String?   @db.VarChar(4)
  display_decimals  Int?      @default(2) @db.SmallInt
  createdAt         DateTime  @map(name: "created_at") @db.DateTime2
  updatedAt         DateTime  @map(name: "updated_at") @db.DateTime2
  legacy_mapping    String?   @db.VarChar(40)
  legacy_synchro_at DateTime? @db.DateTime2

  @@map(name: "currency")
  @@schema("common")
}
