{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/components/*": ["./components/*"],
      "@/config/*": ["./config/*"],
      "@/env/*": ["./env/index/*"],
      "@/features/*": ["./features/*"],
      "@/providers/*": ["./providers/*"],
      "@/server/*": ["./server/*"],
      "@/lib/*": ["./lib/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
