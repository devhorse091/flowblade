{
  "name": "@flowblade/sql-tag",
  "description": "Raw sql template literal",
  "version": "0.1.7",
  "license": "MIT",
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "homepage": "https://belgattitude.github.io/flowblade",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belgattitude/flowblade.git",
    "directory": "packages/sql-tag"
  },
  "keywords": [],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build": "run clean && yarn run tsup",
    "build-release": "run build",
    "bench-disabled": "vitest bench --run",
    "bench-codspeed-disabled": "cross-env CODSPEED=1 vitest bench --run",
    "bench-watch-disabled": "vitest bench",
    "docgen": "run-s docgen-typedoc",
    "docgen-typedoc": "rimraf ./docs/api && typedoc --plugin typedoc-plugin-markdown --out ./docs/api",
    "check-dist": "run-s check-dist-esm check-dist-cjs",
    "check-dist-cjs": "es-check --not './dist/*.map.js' -v es2022 './dist/**/*.cjs'",
    "check-dist-esm": "es-check --not './dist/*.map.js' -v es2022 --module './dist/**/*.mjs'",
    "check-pub": "attw --pack && publint",
    "check-size": "size-limit",
    "clean": "rimraf --glob ./dist ./build ./coverage ./_release './tsconfig*.tsbuildinfo'",
    "dev": "tsup --watch",
    "fix-staged": "lint-staged --allow-empty",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.mts,.cts --cache --cache-location ../../.cache/eslint/sql-tag.eslintcache",
    "test": "vitest run",
    "test-unit": "vitest run",
    "test-e2e": "vitest --config=vitest.e2e.config.ts run",
    "test-e2e-watch": "vitest --config=vitest.e2e.config.ts  --ui --api 4516",
    "test-unit-coverage": "vitest run --coverage",
    "test-unit-edge": "vitest run --environment edge-runtime",
    "test-unit-watch": "vitest --ui --api 4515",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "typecheck-build": "tsc --project tsconfig.build.json --noEmit",
    "ci-coverage-upload": "../../.github/scripts/download/codecov -F flowblade-sql-tag --dir ./coverage"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.17.3",
    "@belgattitude/eslint-config-bases": "6.20.0",
    "@codspeed/vitest-plugin": "4.0.0",
    "@edge-runtime/vm": "5.0.0",
    "@electric-sql/pglite": "0.2.16",
    "@size-limit/file": "11.1.6",
    "@size-limit/webpack": "11.1.6",
    "@vitest/coverage-istanbul": "3.0.3",
    "@vitest/ui": "3.0.3",
    "browserslist": "4.24.4",
    "browserslist-to-esbuild": "2.1.1",
    "cross-env": "7.0.3",
    "es-check": "8.0.1",
    "esbuild": "0.24.2",
    "eslint": "8.57.1",
    "execa": "9.5.2",
    "npm-run-all2": "7.0.2",
    "prettier": "3.4.2",
    "publint": "0.3.2",
    "rimraf": "6.0.1",
    "rollup": "4.31.0",
    "size-limit": "11.1.6",
    "sql-formatter": "15.4.9",
    "sql-template-tag": "5.2.1",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "typedoc": "0.27.6",
    "typedoc-plugin-markdown": "4.4.1",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.3",
    "webpack": "5.97.1"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
